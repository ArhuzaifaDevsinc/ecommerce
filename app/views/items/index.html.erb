<% if current_user %>
    <%= link_to "Sign out",
    destroy_user_session_path, method: :delete%>
    <p> <%= link_to "Edit",edit_user_registration_path %> </p>
    </br>
    <%= image_tag(current_user.image_thumbnail) if current_user.image.attached?%>
<%else%>
<p> <%= link_to "Sign in",new_user_session_path %> </p>
<p> <%= link_to "Sign up",new_user_registration_path%> </p>
<%end%>
<h2>For adding new Item</h2>
<%=link_to 'new Item',new_item_path%>
<details>
<summary> Shopping cart </summary>
<%if @cart.empty?%>
<p> No items in cart </p>
<%else%>
<ul>
    <% @cart.each do |item| %>
    <li>
       <%=item.title%>
       <%=item.price%> 
       <%=link_to '+', line_item_add_item_path(item)%>
       <%= @quantity %>
       <%=link_to '-', line_item_reduce_item_path(item)%>
       <p><%= button_to 'remove from cart',remove_from_cart_item_path(item) ,method: :delete%></p>
    </li>
    <%end%>
  </ul>
  <p><%= button_to 'checkout',root_path, method: :get%> </p>
<%end%>
</details>
<% @items.each do |item| %>
    <br>
    <%= item.id %>
  <%=link_to item.title, item_path(item)%>
      <% if @cart.include?(item) %>
          <p>item is in your cart</p>
        <%else%>
          <p><%= link_to 'add to cart',add_to_cart_item_path(item.id),method: :post%></p>
          <% if flash[:errors] %>
            <div class="notice"><%= flash[:errors] %></div>
          <% end %>
        <%end%>
   

  <div >
  <% (0...item.images.count).each do |image|%>
    <%= image_tag(item.thumbnail(image))%>
  <%end%>
  </div>
  <% if user_signed_in?%>
    <% if item.user.id == current_user.id %>
      <%=link_to 'edit', edit_item_path(item)%>
      <%=link_to 'delete', item_path(item),
       method: :delete,
       data: { confirm: "Are you sure you want delete this item? "}%> 
      
    <%end%>
  <%end%>
  <br>
<%end%>
