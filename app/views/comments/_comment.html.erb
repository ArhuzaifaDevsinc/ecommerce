<h1> comments are following</h1>
<br>
<%= comment.id%>
<%= comment.description %>
<% if user_signed_in? %>
    <% if comment.user.id == current_user.id %>
        <%=link_to 'Edit', edit_comment_path(comment)%>
        <%= link_to 'Delete', comment_path(comment),
        method: :delete,
        data: {confirm: "you want to delete this comment?"}%>
    <%end%>
<%end%>